if TARGET_TQMLS1043A

config SYS_BOARD
	default "tqmls1043a"

config SYS_VENDOR
	default "tq"

config SYS_SOC
	default "fsl-layerscape"

config SYS_CONFIG_NAME
	default "tqmls1043a"

choice
	prompt "TQMLS1043A base board variant"
	default TQMLS1043A_BB_MBLS10XXA
	help
	  Select base board for TQMLS1043A

config TQMLS1043A_BB_MBLS10XXA
	bool "TQMLS1043A on MBLS10xxA Starterkit"
	select TQ_MBLS10XXA
	help
	  Select the MBLS10XXA starterkit. This features various SerDes configurations,
	  Ethernet, 10GBit Ethernet, USB, SD-Card and PCIe.

endchoice

source "board/tq/common/Kconfig"

endif
