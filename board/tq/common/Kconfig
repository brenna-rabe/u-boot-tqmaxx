config TQ_BB
	bool
	default y

config TQ_BOARDGPIO
	bool
	default y if DM_GPIO

config TQ_EEPROM
	bool
	select DM_I2C
	select I2C_EEPROM

#
# This is only needed for boards with hardware revisions with/without serial
# termination in eMMC signal lines. The code allows to decide upon the eMMC type
# if serial termination is present or the optional DSR of the eMMC should be used
# instead
#
config TQ_EMMC
	bool

#
# This should be selected by boards that wish to support multiple env locations
# select ENV_IS_NOWHERE to use as default if nothing matches.
#
config TQ_ENVLOC
	bool
	select ENV_IS_NOWHERE

config TQ_RTC
	bool

#
# This is only for SOM with i.MX8X / i.MX8 to query information from SCU
#
config TQ_SCU
	bool
	default y if IMX8

config TQ_SDMMC
	bool

config TQ_VARD
	bool
	select HASH
	select SPL_HASH if SPL
	select TQ_EEPROM
