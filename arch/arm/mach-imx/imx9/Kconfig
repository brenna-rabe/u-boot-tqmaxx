if ARCH_IMX9

config AHAB_BOOT
    bool "Support i.MX9 AHAB features"
    help
    This option enables the support for AHAB secure boot.

config IMX9
	bool
	select HAS_CAAM
	select ROM_UNIFIED_SECTIONS

config IMX93
	bool
	select IMX9
	select ARMV8_SPL_EXCEPTION_VECTORS

config SYS_SOC
	default "imx9"

choice
	prompt  "NXP i.MX9 board select"
	optional

config TARGET_IMX93_14X14_EVK
	bool "imx93_14x14_evk"
	select IMX93

config TARGET_IMX93_11X11_EVK
	bool "imx93_11x11_evk"
	select OF_BOARD_FIXUP
	select IMX93

config TARGET_IMX93_9X9_QSB
	bool "imx93_9x9_qsb"
	select IMX93
	select IMX9_LPDDR4X

config TARGET_TQMA93XX
	bool "TQMa93xx family of SOM"
	select IMX93
	select IMX9_LPDDR4X
	help
	  This enables support for TQ-Systems GmbH family of i.MX93
	  based SOM supporting different i.MX93 variants and different
	  SOM form factors

config TARGET_IMX91P_11X11_EVK
	bool "imx91p_11x11_evk"
	select IMX93

config TARGET_IMX91P_9X9_QSB
	bool "imx91p_9x9_qsb"
	select IMX93
	select IMX9_LPDDR4X

endchoice

source "board/freescale/imx93_evk/Kconfig"
source "board/freescale/imx93_qsb/Kconfig"
source "board/tq/tqma93xx/Kconfig"

endif

